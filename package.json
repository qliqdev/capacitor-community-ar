{
  "name": "@capacitor-community/ar",
  "version": "0.0.1",
  "description": "ARKit and ARCore for capacitor",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "CapacitorCommunityAr.podspec"
  ],
  "author": "Abbas Fatullaev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qliqdev/capacitor-community-ar.git"
  },
  "bugs": {
    "url": "https://github.com/qliqdev/capacitor-community-ar/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api ARPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^4.7.0",
    "@capacitor/core": "^4.7.0",
    "@capacitor/docgen": "^0.2.1",
    "@capacitor/ios": "^4.7.0",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^2.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.35.0",
    "eslint-plugin-import": "^2.26.0",
    "prettier": "~2.8.1",
    "prettier-plugin-java": "~2.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.7.5",
    "swiftlint": "^1.0.1",
    "typescript": "~4.8.4"
  },
  "peerDependencies": {
    "@capacitor/core": "^4.7.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.1"
  },
  "type": "module",
  "homepage": "https://github.com/qliqdev/capacitor-community-ar#readme",
  "directories": {
    "example": "example"
  }
}
